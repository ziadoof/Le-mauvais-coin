{% extends "layout.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <div class="container pt-0">
        <div class="row">
            <div class="col-10 offset-1">
                 <div class="row">
                     <div class="col-md-6">
                       {{ form_row(form.firstname) }}
                     </div>
                     <div class="col-md-6">
                         {{ form_row(form.lastname) }}
                     </div>
                 </div>
                 <div class="row">
                     <div class="col-md-6">
                         {{ form_row(form.username) }}
                     </div>
                     <div class="col-md-6">
                         {{ form_row(form.email) }}
                     </div>
                 </div>
                 <div class="row">
                     <div class="col-md-6 d-inline">
                         {{ form_row(form.password.first) }}
                     </div>
                     <div class="col-md-6 d-inline">
                         {{ form_row(form.password.second) }}
                     </div>
                 </div>
                 <div class="row">
                     <div class="col-md-6">
                         {{ form_row(form.photo) }}
                     </div>
                     <div class="col-md-6">
                         {{ form_row(form.telephone) }}
                     </div>
                 </div>
                 <div class="row">
                     <div class="col-md-4" >
                         {{ form_row(form.region) }}
                     </div>
                     <div class="col-md-4">
                         {{ form_row(form.department) }}
                     </div>
                     <div class="col-md-4">
                         {{ form_row(form.city) }}
                     </div>
                </div>
                <button type="submit" class="btn btn-primary">S'inscrire !</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>{{ dump(form) }}
{% endblock %}